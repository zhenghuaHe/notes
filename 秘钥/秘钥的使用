    IdentityFile ~/.ssh/docker@mwteck
    IdentityFile ~/.ssh/cibot@mwteck

Host 172.16.1.*
    IdentityFile ~/.ssh/docker@mwteck
    IdentityFile ~/.ssh/cibot@mwteck

Host 106.15.186.173
    IdentityFile ~/.ssh/mwteck.pem




apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: api-admin
  namespace: pro
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: api-admin
        track: stable
    spec:
      containers:
      - name: api-admin
        image: registry.cn-shanghai.aliyuncs.com/mwteck/api-admin:20180813_1
        volumeMounts:
        - name: time
          mountPath: /etc/localtime
        - name: log
          mountPath: /var/log/tomcat
        - name: config
          mountPath: /etc/tomcat/server.xml
        - name: conf
          mountPath: /data/web/api-admin/ROOT/WEB-INF/classes/config.properties
        ports:
          - containerPort: 8080
      volumes:
      - name: time
        hostPath:
          path: /etc/localtime
      - name: log
        hostPath:
          path: /home/ttd/log/api-admin
      - name: config
        hostPath:
          path: /home/ttd/config/api-admin/server.xml
      - name: conf
        hostPath:
          path: /home/ttd/config/api-admin/config.properties

---

apiVersion: v1
kind: Service
metadata:
  name: api-admin
  namespace: pro
spec:
  type: NodePort
  ports:
  - port: 8080
    targetPort: 8080
    nodePort: 30212
  selector:
    app: api-admin
